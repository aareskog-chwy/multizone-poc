{
    "$schema": "https://turborepo.com/microfrontends/schema.json",
    "options": {
        "localProxyPort": 3000
    },
    "applications": {
      "app1": {
        "development": {
          "local": {
            "port": 3001
          }
        }
      },
      "app2": {
        "development": {
          "local": {
            "port": 3002
          }
        },
        "routing": [
          {
            "paths": ["app2", "/app2/:path*"]
          }
        ]
      }
    }
}
